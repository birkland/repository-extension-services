    <configfile finalname="/etc/edu.amherst.acdc.idiomatic.cfg">mvn:edu.amherst.acdc/acrepo-idiomatic/${project.version}/cfg/configuration</configfile>
  </feature>

  <feature name="acrepo-idiomatic-pgsql" version="${project.version}">
